# Application configuration
BASE_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Database configuration
# For local development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coworks_db
DB_USER=postgres
DB_PASS=password
DB_SCHEMA=public
DB_SSL=false
DB_LOGGING=false

# For Neon/Vercel - uncomment and set the connection string
# DATABASE_URL=postgres://user:password@hostname:port/database?sslmode=require

# JWT configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Storage configuration
STORAGE_TYPE=local
STORAGE_BUCKET=coworks-storage
STORAGE_REGION=us-east-1

# Serverless optimization
# Neon database pooling
CONNECTION_POOLING=true
CONNECTION_POOL_MAX=5
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=25000

# Image handling
MAX_IMAGE_SIZE=2 # in MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Misc configuration
DEBUG=false
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgres://username:password@hostname:5432/database_name
DB_NAME=coworks
DB_USER=postgres
DB_PASS=password
DB_HOST=localhost
DB_PORT=5432
DB_SSL=false
DB_SCHEMA=public

# Server Configuration
PORT=3000

# Base URL
# For local development
BASE_URL=http://localhost:3000
# For production (uncomment when deploying to Vercel)
# BASE_URL=https://your-vercel-app-name.vercel.app

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your.email@gmail.com
MAIL_PASS=your_app_password
MAIL_FROM=your.email@gmail.com

# Database Full Connection String
DATABASE_URL="postgres://username:password@hostname:5432/database_name?sslmode=require"
DATABASE_URL_UNPOOLED="postgres://username:password@hostname_unpooled:5432/database_name?sslmode=require"

# Postgres Configuration
PGDATABASE="database_name"
PGHOST="hostname"
PGHOST_UNPOOLED="hostname_unpooled"
PGPASSWORD="password"
PGUSER="username"
POSTGRES_DATABASE="database_name"
POSTGRES_HOST="hostname"
POSTGRES_PASSWORD="password"
POSTGRES_PRISMA_URL="postgres://username:password@hostname:5432/database_name?connect_timeout=15&sslmode=require"
POSTGRES_URL="postgres://username:password@hostname:5432/database_name?sslmode=require"
POSTGRES_URL_NON_POOLING="postgres://username:password@hostname_unpooled:5432/database_name?sslmode=require"
POSTGRES_URL_NO_SSL="postgres://username:password@hostname:5432/database_name"
POSTGRES_USER="username"

# Alternative Email Configuration (used by some parts of the application)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your.email@gmail.com

# File storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Razorpay Configuration (for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Vercel Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here